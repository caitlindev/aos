# EditorConfig is awesome: http://EditorConfig.org

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf

trim_trailing_whitespace = true

insert_final_newline = true

# Space indentation, size 2
[*.jade,*.html]
indent_style = space
indent_size = 2

[*.js,*.json]
indent_style = space
indent_size = 2

[*.coffee]
indent_style = space
indent_size = 2
